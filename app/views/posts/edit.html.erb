<div class="main">
  <div class="container">
    <div class="signup">
      <div class="signup-form">
        <div class="signup-header">
          <h2>EDIT POST</h2>
        </div>
        <div class="signup-body container-fluid">
          <%= form_with model: @post, local: true do |f| %>

            <div class="field row">
              <div class="col-md-6 form-item"><%= f.label :content %></div>
              <div class="col-md-6 form-item"><%= f.text_area :content, autofocus: true, autocomplete: "content", placeholder: @post.content %></div>
            </div>

            <div class="row">
              <div class="form-btn"><%= f.submit "編集する", class: "btn-signup btn btn-primary" %></div>
            </div>
          <% end %>
        </div>
        <div class="signup-footer">
          <%= link_to "戻る", :back %>
        </div>
      </div>
    </div>
  </div>
</div>
